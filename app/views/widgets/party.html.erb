<div class="deco-bg background <%= @party.slug %>"></div>

<header>
  <h1 class="<%= @party.slug %>">
    <%= link_to @party do %>
      <%= image_tag @party.logo, alt: "#{@party.name}s logo", width: '96', height: '96' %>
      <%= @party.name %>
    <% end %>
  </h1>
</header>

<article>

  <ul class="votes">
  <% @issues.each do |issue| %>
    <li class="vote">
      <%= link_to issue.title, issue %>:
      <%= 'har ' + issue.valence_explanation_for(@party).try(:downcased_title)%>
    </li>
  <% end %>
  </ul>

</article>
