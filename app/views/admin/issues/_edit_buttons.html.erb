<div class="form-actions">
  <div class="pull-left">
    <%= form.submit t('app.previous'), name: 'previous', disabled: disable_prev, class: 'btn' %>
    <%= form.submit t('app.next'), disabled: disable_next, class: 'btn' %>
  </div>

  <div class="pull-right">
    <%= link_to t('app.cancel'), admin_issues_path, class: 'btn btn-danger' %>
    <%= form.submit t('app.save'), class: 'btn', name: 'save' %>
    <%= form.submit t('app.done'), class: 'btn btn-primary', name: 'finish' %>
  </div>
</div>
