<%= content_for :document_ready do %>
<script>
  $(function() {
    issueEditor = HDO.issueEditor.create({
      root: "#issue-editor",
      url: "<%= @issue.new_record? ? admin_issues_path : admin_issue_path(@issue) %>",
      id: <%= @issue.id || -1 %>
    });

    issueEditor.init();
  });
</script>
<% end %>
