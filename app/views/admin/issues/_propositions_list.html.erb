<% propositions_and_connections.each do |proposition, connection| %>
  <div class="row-fluid well">

    <h4><%= proposition.description %></h4>
    <div class="span10"><%= proposition.short_body %></div>
  </div>

  <div class="row-fluid">
    <div class="span4">

      <% proposition.votes.each do |vote| %>
        <div class="row-fluid">
          <h5><%= link_to vote.subject, vote, :target => 'issue_new' %></h4>

          <ul>
            <% vote.parliament_issues.each do |parliament_issue| %>
              <li><%= link_to parliament_issue.summary, parliament_issue, target: '_blank' %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>

    <div class="span4">
      <label>
        <strong><%= PropositionConnection.human_attribute_name :title %></strong>
        <%= text_area_tag "propositions[#{proposition.id}][title]", connection && connection.title, class: 'span12' %>
      </label>
    </div>

    <div class="span4">
      <label>
        <strong>Koblet til saken?</strong>
        <%= check_box_tag "propositions[#{proposition.id}][connected]", 'true', !!connection %>
      </label>

      <label>
        <strong><%= PropositionConnection.human_attribute_name :proposition_type %></strong>
        <p><%= select_tag "propositions[#{proposition.id}][proposition_type]", proposition_type_options_for(connection) %></p>
      </label>

      <p>
        <% if (connected_issues = connected_issues_for(proposition)) && connected_issues.any? %>
          Forslaget brukes også i
            <ul>
              <% connected_issues.each do |issue| %>
                <li><%= link_to issue.title, issue %>
              <% end %>
            </ul>
        <% end %>
      </p>
    </div>
  </div>

  <div class="row-fluid">
    <div data-wmd-editor="<%= proposition.id %>">
      <div class="span6">
        <strong><%= PropositionConnection.human_attribute_name :comment %></strong>
        <div id="wmd-button-bar-<%= proposition.id %>"></div>
        <%= text_area_tag "propositions[#{proposition.id}][comment]", connection && connection.comment, class: 'span12', rows: '10', id: "wmd-input-#{proposition.id}" %>
      </div>

      <div class="span6">
        <strong>Forhåndsvisning</strong>
        <br><br>
        <div id="wmd-preview-<%= proposition.id %>" class="well"></div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="pull-right muted">id: <%= proposition.id %>, ekstern id: <%= proposition.external_id %></div>
  </div>

  <hr>
<% end %>

<% content_for :document_ready do %>
  <script>
    $(document).ready(function () { HDO.markdownEditor(); });
  </script>
<% end %>