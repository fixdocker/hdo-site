<% @propositions.each do |prop| %>
  <div class="row-fluid">
    <h3>
      <%= link_to prop.description, prop %>
      <small class="pull-right muted"><%= I18n.l prop.vote_time, format: :short_text_time %></small>
    </h3>
  </div>

  <div class="row-fluid">
    <div class="span4">
      <h4>Fra Stortinget</h4>
      <div class="well"><%= prop.plain_body.truncate(1000) %></div>
    </div>

    <div class="span4">
      <h4>Manuell</h4>
      <div><%= prop.simple_description %></div>
    </div>

    <div class="span4">
      <h4>Automatisk</h4>
      <div><%= prop.auto_title %></div>
    </div>
  </div>

  <hr class="soften">
<% end %>