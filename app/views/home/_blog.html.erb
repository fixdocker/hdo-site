<div class="blog">
  <div class="row-fluid">
    <h4>Siste artikler</h4>

    <div class="span12">
      <% @latest_posts.in_groups_of(2) do |group| %>
        <div>
          <% group.each do |latest_post| %>
            <a href="<%= latest_post.url %>">
              <% if latest_post.image %>
                <div class="background-image" style="background-image: url(<%= latest_post.image %>);"></div>
              <% end %>

              <h4><%= latest_post.title %></h4>
              <p class="byline">av <%= latest_post.author %></p>
              <div class="content">
                <%= latest_post.teaser.html_safe %>
              </div>
              <span class="read-more">Les hele</span>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<small class="pull-right" style="padding-top: 1rem;">
  <a href="http://blog.holderdeord.no/">Se alle artikler &raquo;</a>
</small>


