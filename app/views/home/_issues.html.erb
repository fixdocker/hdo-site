<div class="row-fluid">
  <section class="top-issues">
    <h4 class="top-issues-caption">Ukens tema</h4>
    <h2 class="top-issues-caption"><%= AppConfig.topic_of_the_week %></h2>

    <% if @main_issue %>
      <article class="issue">
        <%= link_to @main_issue do %>
          <img src="/images/topic.jpg?title=<%= URI.escape AppConfig.topic_of_the_week %>" alt="Illustrasjonsbilde tema">
          <h3><%= @main_issue.title %></h3>
          <div class="muted"><%= @main_issue.short_explanation %></div>
          <p>
            <%= @main_issue.description %>
            <span class="read-more"><%= t('app.read_more') %></span>
          </p>
        <% end %>
      </article>
    <% end %>

    <div class="row-fluid">
      <div class="span8">
        <% @issues.each_slice(2) do |issues| %>
          <div class="row-fluid">
            <% issues.each do |issue| %>
              <article class="issue span6">
                <%= link_to issue do %>
                  <h4><%= issue.title %></h4>
                  <div class="muted"><%= issue.short_explanation %></div>
                  <p>
                    <%= awesome_truncate issue.description, 200 %>
                    <span class="read-more"><%= t('app.read_more') %></span>
                  </p>
                <% end %>
              </article>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="span4">
        <%= render partial: 'shared/propositions_feed', locals: { feed: @propositions_feed } %>
      </div>
    </div>
  </section>
</div>