<% page_title "#{@issue.title} - #{t('app.issues.title')} - #{t('app.title')}" %>
<% metadata[:description] = @issue.description %>
<% metadata[:type] = 'article' %>
<% metadata[:url] = issue_url(@issue) %>

<%= render partial: 'temp_toggles' %>

<article class="issue-timeline">
  <div class="page-header">
    <h1 class="issue-title"><%= @issue.title %></h1>
    <%= render partial: 'aside', locals: { issue: @issue } %>
  </div>

  <p class="issue-description"><%= @issue.description %></p>

  <% @issue.periods.each do |period| %>

  <div class="positions">
    <h3>Oppsummering av <%= period.name %></h3>
    <% period.positions.each do |position| %>
      <div class="row-fluid">
        <div class="span2">
          <% position.parties.each do |party| %>
            <img src="<%= party.logo.versions[:medium] %>" style="max-width: 50px" class="pull-right">
          <% end %>
        </div>

        <div class="span10 position">
          <h4><%= position.title %></h4>
          <p class="position-description"><%= position.description %></p>
        </div>
      </div>

      <div class="row-fluid accountability">
        <div class="offset2 span10">
          <strong>Ordholding</strong>

          <ul class="unstyled">
            <% position.accountability.each do |acc| %>
              <li><%= acc %></li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="row-fluid promises">
        <div class="offset2 span10">
          <strong>LÃ¸fter</strong>

          <ul>
            <% position.promises.each do |p| %>
              <li class="<%= 'muted' if p.related? %>"><%= p.promise.body %> status: <%= p.status %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  </div>


    <div class="row-fluid">

      <div class="span6"></div>

      <div class="span6 timeline">
        <div class="row-fluid timeline-indicator">
          <h3>Avstemninger <%= period.name %></h3>
        </div>

        <% period.days.each do |day| %>
          <div class="row-fluid timeline-entry">
            <div class="date">
              <div class="day"><%= day.day %></div>
              <div class="month"><%= day.month %></div>
            </div>

            <% day.votes.each do |vote| %>
              <div class="row-fluid vote">
                <p class="vote-title"><%= vote.title %></p>
                <div class="vote-detail"><%= markdown(vote.comment).html_safe %></div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</article>
