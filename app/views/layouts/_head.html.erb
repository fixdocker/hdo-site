<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!--[if lt IE 9]>
    <%= javascript_include_tag "conditional/html5" %>
  <![endif]-->

  <%= render partial: 'layouts/opengraph' %>
  <%= render partial: 'layouts/twitter_card' %>

  <title><%= page_title %></title>

  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "application", :media => "all" %>

  <link href="/favicon.ico" rel="shortcut icon" />
  <link href="<%= image_path 'apple-touch-icon-precomposed.png' %>" rel="apple-touch-icon-precomposed" />
  <link rel="search" type="application/opensearchdescription+xml" href="<%= opensearch_path format: :xml %>"/>

  <script>
    var HDO = HDO || {
      ssl: <%= AppConfig.ssl_enabled.to_json.html_safe %>
    };
  </script>
</head>
